@page "/login"

@using UrlShortener.App.Frontend.Business

@inject IAuthService AuthService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<h3>Login</h3>

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <p style="color: red;">@ErrorMessage</p>
}

<div>
    <label>Email:</label>
    <input @bind="Email" type="email" required />
</div>
<div>
    <label>Password:</label>
    <input @bind="Password" type="password" required />
</div>
<button @onclick="LoginUser">Login</button>

@code {
    private string Email = string.Empty;
    private string Password = string.Empty;
    private string ErrorMessage = string.Empty;

    private async Task LoginUser()
    {
        string? token = await AuthService.Login(Email, Password);
        if (token != null)
        {
            ((AppAuthenticationStateProvider)AuthenticationStateProvider).MarkUserAsAuthenticated(token);
            Navigation.NavigateTo("/");
        }
        else
        {
            ErrorMessage = "Invalid email or password.";
        }
    }
}